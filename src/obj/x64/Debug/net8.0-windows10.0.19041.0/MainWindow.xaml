<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="Morris.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Morris"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Morris"
    >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#CCD5F0">
            
            <!--Toggle btn with a custom glyph-->
            <ToggleButton x:ConnectionId='3' x:Name="pencilBtn" IsChecked="True" Width="45" Height="45"                        >
                <FontIcon Foreground="Black" Glyph="&#xED63;"/>
            </ToggleButton>
            <ToggleButton x:ConnectionId='4' x:Name="brushBtn" Width="45" Height="45"                       >
                <FontIcon Foreground="Black" Glyph="&#xE771;"/>
            </ToggleButton>
            
            <ToggleButton x:ConnectionId='5' x:Name="eraserBtn" Width="45" Height="45"                        >
                <FontIcon Foreground="Black" Glyph="&#xE75C;"/>
            </ToggleButton>
            
            <ToggleButton x:ConnectionId='6' x:Name="clsBtn" Width="45" Height="45"                     >
                <FontIcon Foreground="Black" Glyph="&#xE894;"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='7' x:Name="colorPickrBtn" Width="45" Height="45"                            >
                <FontIcon Foreground="Black" Glyph="&#xE771;"/>
            </ToggleButton>
            <!--Controls the currently selected brush colour-->
            <SplitButton x:ConnectionId='8' x:Name="colorBtn" Foreground="Black" Padding="0" MinHeight="0" MinWidth="0" VerticalAlignment="Top">
                <Border x:ConnectionId='15' x:Name="currentColor" Width="45" Height="45" Background="Black" Margin="0" CornerRadius="5,5,5,5"/>
                <SplitButton.Flyout>
                    <Flyout Placement="Bottom">
                        <ColorPicker x:ConnectionId='16' x:Name="colorPicker" ColorSpectrumShape="Box" IsMoreButtonVisible="False" IsColorSliderVisible="True"
                                 IsColorChannelTextInputVisible="False" IsHexInputVisible="True" IsAlphaEnabled="False" IsAlphaSliderVisible="True"
                                                                        />
                        <!--Color Changed is the event handler-->
                    </Flyout>
                </SplitButton.Flyout>
            </SplitButton>

            <!--For the background colour -->
            <SplitButton x:ConnectionId='9' x:Name="backColorBtn" Foreground="Black" Padding="0" MinHeight="0" MinWidth="0" VerticalAlignment="Top">
                <Border x:ConnectionId='13' x:Name="backgColor" Width="45" Height="45" Background="White" Margin="0" CornerRadius="5,5,5,5"/>
                <SplitButton.Flyout>
                    <Flyout Placement="Bottom">
                        <ColorPicker x:ConnectionId='14' x:Name="backColorPicker" ColorSpectrumShape="Box" IsMoreButtonVisible="False" IsColorSliderVisible="True"
                     IsColorChannelTextInputVisible="False" IsHexInputVisible="True" IsAlphaEnabled="False" IsAlphaSliderVisible="True"
                                                                />
                        <!--Color Changed is the event handler-->
                    </Flyout>
                </SplitButton.Flyout>
            </SplitButton>
            <!--for he brushes-->
            <ComboBox x:ConnectionId='10' x:Name="comboBrushThick" Foreground="Black"                                  
                      SelectedIndex="4" Width="80" Height="45"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"                                                    />
            
            <!--For the shapes btn-->
            <ToggleButton x:ConnectionId='11' x:Name="shapesBtn" Width="45" Height="45"                        >
                <FontIcon Foreground="Black" Glyph="&#xF156;"/>
            </ToggleButton>

            <!--now for the thickness and shape-->
            <ComboBox x:ConnectionId='12' Foreground="Black" x:Name="ComboShapes" SelectedIndex="0" Width="100" Height="45"                                                >
                <ComboBoxItem Content="Circle"/>
                <ComboBoxItem Content="Rectangle"/>
                <ComboBoxItem Content="Triangle"/>
            </ComboBox>

        </StackPanel>

        <Canvas x:ConnectionId='2' x:Name="canvas" Grid.Row="1" Background="White"                                       
                                                                                           />
    </Grid>


</Window>

