<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Morris.Pages.SimulationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Morris"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas" Grid.Row="1" Background="DarkSlateBlue" Height="Auto" Width="Auto" Loaded="Canvas_FillCanvas">
            <Ellipse Width="100" Height="60" Fill="SkyBlue"
                     Stroke="DarkBlue" StrokeThickness="2"
                     Canvas.Left="50" Canvas.Top="40"/>
        </Canvas>
    </Grid>
</Page>
