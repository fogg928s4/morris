<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Morris.Pages.CreateStarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Morris"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    
    <Grid>
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
           <RowDefinition Height="*"/>
       </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Create a Star"
            FontSize="32"
            FontWeight="Bold"
            TextAlignment="Left"
            HorizontalAlignment="Left"
            Margin="0,20,0,20"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Padding="20" Spacing="10" HorizontalAlignment="Center">
            <TextBlock x:Name="labelStarName" Text="Name of the Star" FontSize="16" FontWeight="Normal" Margin="10"/>
            <TextBox x:Name="starNameTxtBox" PlaceholderText="Enter the name of the star" MinWidth="400"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Padding="20" Spacing="10" HorizontalAlignment="Center">
            <TextBlock x:Name="labelStarMass" Text="Mass of the Star (in Sun Masses)" FontSize="16" FontWeight="Normal" Margin="10"/>
            <Slider
                x:Name="starMassSlider"
                TickFrequency="20"
                Minimum="1" Maximum="100"         
                TickPlacement="Outside"
                SnapsTo="StepValues" />
        </StackPanel>
        
        <Button Grid.Row="3" x:Name="createStarBtn" Content="AAAAAAAAAAAa"/>
    </Grid>
</Page>
